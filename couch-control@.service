[Unit]
Description=Couch Control - Remote Desktop Control
After=network.target graphical.target
Wants=graphical.target

[Service]
Type=simple
Environment=DISPLAY=:0
ExecStart=/usr/bin/python3 -m couch_control start
ExecStop=/usr/bin/python3 -m couch_control stop
Restart=on-failure
RestartSec=5

# Run as current user (not root)
User=%i

# Working directory
WorkingDirectory=%h

[Install]
WantedBy=default.target
